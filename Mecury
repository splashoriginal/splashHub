local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/deeeity/mercury-lib/master/src.lua"))()

local gui = Library:create{
    Theme = Library.Themes.Serika
}

local tab = gui:tab{
    Icon = "rbxassetid://6034996695",
    Name = "Welcome"
}

tab:button({
    Name = "show prompt",
    Callback = function()
        tab:prompt{
            Title = "Hey",
            Text = "Thanks for using SplashHub V3 :3",
            Buttons = {
                Ok = function()
                    tab:prompt{
                        Followup = true,
                        Title = "Socials",
                        Text = "Join our discord, we sometimes do a lot of fun stuff there and have scripts for games too!",
                        Buttons = {
                            Yes = function()
                                tab:prompt{
                                    Followup = false,
                                    Title = "Discord link",
                                    Text = "https://",
                                    Buttons = {
                                        COPY = function()
                                            setclipboard("https://discord.com/invite/hm3vt3gw9x")
                                        end,
                                        nvm = function()
                                            gui:set_Status("money")
                                        end
                                    }
                                }
                            end,
                        }
                    }
                end,
            }
        }
    end,
})
tab:keybind({Callback = function()
    gui:prompt()
end,})
tab:dropdown({
    Name = "Dropdown",
    Description = "yeeeeeeeeeeeeeeeeeeeboi",
    StartingText = "Bodypart",
    Items = {
        "Head",
        "Torso",
        "Random"
    }
})
tab:dropdown({
    Name = "yes",
    StartingText = "Number",
    Items = {
        {"One", 1},
        {"Two", 2},
        {"Three", 3}
    },
    Description = "amongu s",
    Callback = function(v)
        print(v, "clicked")
    end,
})
local cum = tab:slider({Callback = function(v)
    gui:set_status(v)
end})

tab:textbox({Callback = function(v)
    gui:prompt{Text = v}
end,})

tab:color_picker({
    Name = "your mom's color",
    Style = Library.ColorPickerStyles.Legacy,
    Description = "Click to adjust color...",
    Callback = function(color)
        print(color)
    end,
})
